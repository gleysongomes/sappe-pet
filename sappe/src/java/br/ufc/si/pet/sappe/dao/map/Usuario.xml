<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Usuario">

    <resultMap id="usuarioResult" class="usuario">
        <result property="id" column="id"/>
        <result property="nome" column="nome"/>
        <result property="email" column="email"/>
        <result property="senha" column="senha"/>
        <result property="codigo" column="codigo"/>
        <result property="fone" column="fone"/>
        <result property="instituicao" column="instituicao"/>
        <result property="rua" column="rua"/>
        <result property="bairro" column="bairro"/>
        <result property="numero" column="numero"/>
        <result property="cidade" column="cidade"/>
        <result property="uf" column="uf"/>
    </resultMap>

    <insert id="addUsuario" parameterClass="usuario" >
        INSERT INTO sappe.usuario(id, nome, email, senha, codigo, fone, instituicao, rua, bairro, numero, cidade, uf)
        VALUES (#id#, #nome#, #email#, #senha#, #codigo#,#fone#, #instituicao#, #rua#, #bairro#, #numero#, #cidade#, #uf#);
    </insert>

    <delete id="deleteUsuario" parameterClass="long">
        DELETE FROM sappe.usuario
        WHERE id = #var#;
    </delete>

    <update id="updateUsuario" parameterClass="usuario">
        UPDATE sappe.usuario
        SET nome=#nome#, email=#email#, senha=#senha#, codigo=#codigo#, fone=#fone#, instituicao=#instituicao#, rua=#rua#, bairro=#bairro#, numero=#numero#, cidade=#cidade#, uf=#uf# WHERE  id=#id#;
    </update>

    <select id="getUsuarioByEmail" resultClass="usuario"
            parameterClass="java.lang.String"
            resultMap="usuarioResult">

        SELECT *
        FROM sappe.usuario
        WHERE email = #var#;
    </select>

    <select id="getUsuarioByCodigo" resultClass="usuario"
            parameterClass="java.lang.String"
            resultMap="usuarioResult">

        SELECT *
        FROM sappe.usuario
        WHERE codigo = #var#;
    </select>



    <select id="getUsuarioById" resultClass="usuario"
            parameterClass="long"
            resultMap="usuarioResult">

        SELECT *
        FROM sappe.usuario
        WHERE id = #var#;
    </select>

    <select id="getUsuarioByNome" resultClass="usuario"
            parameterClass="java.lang.String"
            resultMap="usuarioResult">

        SELECT *
        FROM sappe.usuario
        WHERE nome LIKE #var#;
    </select>

    <select id="getMaxIdUsuario" resultClass="long">
        SELECT MAX(id)
        FROM sappe.usuario;
    </select>

</sqlMap>
