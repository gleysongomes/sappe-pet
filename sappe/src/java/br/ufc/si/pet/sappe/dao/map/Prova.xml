<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="Prova">
    <resultMap id="provaResult" class="prova">
        <result property="id" column="id"/>
        <result property="tipo_id" column="tipo_id"/>
        <result property="usuario_id" column="usuario_id"/>
        <result property="numero_questoes" column="numero_questoes"/>
        <result property="respondida" column="respondida"/>
        <result property="branca" column="branca"/>
        <result property="tempo_prova" column="tempo_prova"/>
        <result property="data" column="data"/>
        <result property="aceitas" column="aceitas"/>
        <result property="erradas" column="erradas"/>
    </resultMap>

    <insert id="addProva" parameterClass="prova">
        INSERT INTO sappe.prova(id, tipo_id,usuario_id, numero_questoes, respondida, branca, tempo_prova, data, aceitas, erradas)
        VALUES (#id#, #tipo_id#, #usuario_id#, #numero_questoes#, #respondida#, #branca#, #tempo_prova#, #data#, #aceitas#, #erradas#);
    </insert>

    <update id="updateProva" parameterClass="prova">
        UPDATE sappe.prova
        SET respondida=#respondida#,branca=#branca#,tempo_prova=#tempo_prova#, data=#data#
        WHERE id=#id#;
    </update>
    
    <update id="updateProvaById" parameterClass="prova">
        UPDATE sappe.prova
        SET aceitas=#aceitas#,erradas=#erradas#
        WHERE id=#id#;
    </update>

    <select id="getListProva" resultClass="prova" resultMap="provaResult">
        SELECT *
        FROM sappe.prova;
    </select>


    <select id="getProvaById" resultClass="prova" parameterClass="long" resultMap="provaResult">
        SELECT *
        FROM sappe.prova
        WHERE id = #var#;
    </select>

    <select id="getProvaByTipoId" resultClass="prova" parameterClass="long" resultMap="provaResult">
        SELECT *
        FROM sappe.prova
        WHERE tipo_id = #var#;
    </select>

    <select id="getAllListProvas" resultClass="prova" parameterClass="long" resultMap="provaResult">
        SELECT *
        FROM sappe.prova
        WHERE usuario_id = #var#;
    </select>

    <select id="getMaxIdProva" resultClass="long">
        SELECT MAX(id)
        FROM sappe.prova;
    </select>

</sqlMap>

