<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
"http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="UsuarioSimulado">

    <resultMap id="usuarioSimuladoResult" class="usuario_simulado">
        <result property="id" column="id"/>
        <result property="simulado_id" column="simulado_id"/>
        <result property="usuario_id" column="usuario_id"/>
        <result property="respondidas" column="respondidas"/>
        <result property="brancas" column="brancas"/>
        <result property="tempo_prova" column="tempo_prova"/>
        <result property="certas" column="certas"/>
        <result property="erradas" column="erradas"/>
    </resultMap>

    <insert id="addUsuarioSimulado" parameterClass="usuario_simulado">
        INSERT INTO sappe.usuario_simulado(simulado_id, usuario_id,respondidas,brancas,tempo_prova,certas,erradas)
        VALUES (#simulado_id#, #usuario_id#,#respondidas#,#brancas#,#tempo_prova#,#certas#,#erradas#);
    </insert>

    <update id="updateUsuarioSimulado" parameterClass="usuario_simulado">
        UPDATE sappe.usuario_simulado
        SET respondidas=#respondidas#,brancas=#brancas#,tempo_prova=#tempo_prova#,certas=#certas#,erradas=#erradas# WHERE  usuario_id=#usuario_id#;
    </update>
    
    <select id="getMaxIdUsuarioSimulado" resultClass="long">
        SELECT MAX(id)
        FROM sappe.usuario_simulado;
    </select>

    <select id="getUsuarioSimuladoBySimuladoId" resultClass="usuario_simulado"
            parameterClass="long"
            resultMap="usuarioSimuladoResult">

        SELECT *
        FROM sappe.usuario_simulado
        WHERE simulado_id = #var#;
    </select>

    <select id="getUsuarioSimuladoByUsuarioId" resultClass="usuario_simulado"
            parameterClass="usuario_simulado"
            resultMap="usuarioSimuladoResult">

        SELECT *
        FROM sappe.usuario_simulado
        WHERE usuario_id = #usuario_id# AND simulado_id=#simulado_id#;
    </select>

    <select id="getTodosUsuariosSimulados" resultClass="usuario_simulado" resultMap="usuarioSimuladoResult">
        SELECT *
        FROM sappe.usuario_simulado;
    </select>

    <select id="getUsuariosSimuladosBySimuladoId" resultClass="usuario_simulado" resultMap="usuarioSimuladoResult" parameterClass="long">
        SELECT *
        FROM sappe.usuario_simulado WHERE simulado_id=#var#;
    </select>

</sqlMap>